<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="bottom"
    android:background="#FFFFFF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/animation_loading_bottom_sheet"
            android:layout_width="68dp"
            android:layout_height="68dp"
            android:layout_gravity="center"
            android:layout_margin="16dp"
            android:visibility="gone"
            app:lottie_autoPlay="true"
            app:lottie_loop="true"
            app:lottie_rawRes="@raw/loading_dot" />

        <LinearLayout
            android:paddingTop="16dp"
            android:id="@+id/wrape_layout_setor"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:visibility="visible">

            <RelativeLayout
                android:layout_gravity="center"
                android:background="#D3D3D3"
                android:layout_width="50dp"
                android:layout_height="3dp">
            </RelativeLayout>

            <com.google.android.material.card.MaterialCardView
                android:layout_marginTop="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginLeft="16dp"
                android:layout_marginBottom="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="4dp"
                app:cardElevation="0dp"
                app:strokeColor="#E4E4E4"
                app:strokeWidth="0.7dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="visible">

                    <TextView
                        android:background="#F4F4F4"
                        android:drawableLeft="@drawable/ic_cash"
                        android:padding="16dp"
                        android:drawablePadding="16dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Detail Pembayaran"
                        android:textColor="#000000"
                        android:textStyle="bold">
                    </TextView>

                    <LinearLayout
                        android:paddingTop="16dp"
                        android:paddingLeft="16dp"
                        android:paddingRight="16dp"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:text="Total Tunai"
                            android:textColor="#1a1a1a" />

                        <TextView
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:id="@+id/tv_dialog_total_tunai"
                            android:gravity="end"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="total_tunai"
                            android:textColor="@color/color_text_blue" />

                        <TextView
                            android:visibility="gone"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:id="@+id/tv_dialog_total_tunai_non_rupiah"
                            android:gravity="end"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="total_tunai"
                            android:textColor="@color/color_text_blue" />

                    </LinearLayout>

                    <LinearLayout
                        android:paddingTop="8dp"
                        android:paddingLeft="16dp"
                        android:paddingRight="16dp"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:text="Total Transfer"
                            android:textColor="#1a1a1a" />

                        <TextView
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:id="@+id/tv_dialog_total_transfer"
                            android:gravity="end"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="total_transfer"
                            android:textColor="@color/color_text_blue" />

                        <TextView
                            android:visibility="gone"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:id="@+id/tv_dialog_total_transfer_non_rupiah"
                            android:gravity="end"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="total_setoran"
                            android:textColor="@color/color_text_blue" />

                    </LinearLayout>

                    <View
                        android:layout_marginTop="16dp"
                        android:layout_marginLeft="16dp"
                        android:layout_marginRight="16dp"
                        android:background="@drawable/dotted"
                        android:layout_width="match_parent"
                        android:layout_height="1.5dp">

                    </View>

                    <LinearLayout
                        android:padding="16dp"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:text="Total Setoran"
                            android:textColor="#1a1a1a" />

                        <TextView
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:id="@+id/tv_dialog_total_setoran"
                            android:gravity="end"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="total_setoran"
                            android:textColor="@color/color_text_blue" />

                        <TextView
                            android:visibility="gone"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:id="@+id/tv_dialog_total_setoran_non_rupiah"
                            android:gravity="end"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="total_setoran"
                            android:textColor="@color/color_text_blue" />

                    </LinearLayout>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:layout_marginRight="16dp"
                android:layout_marginLeft="16dp"
                android:layout_marginBottom="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="4dp"
                app:cardElevation="0dp"
                app:strokeColor="#E4E4E4"
                app:strokeWidth="0.7dp">

                <LinearLayout
                    android:id="@+id/wrap_chck_tunai_mesin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="visible">

                    <TextView
                        android:background="#F4F4F4"
                        android:drawableLeft="@drawable/ic_pembayaran"
                        android:padding="16dp"
                        android:drawablePadding="16dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Pilih Metode Setor "
                        android:textColor="#000000"
                        android:textStyle="bold">
                    </TextView>

                    <LinearLayout
                        android:layout_margin = "8dp"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <androidx.cardview.widget.CardView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical">

                                    <CheckBox
                                        android:id="@+id/chk_kredit"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:background="@drawable/outline_button"
                                        android:padding="12dp"
                                        android:text="Kredit"
                                        android:textColor="#0D396D"
                                        android:textSize="16sp"
                                        android:textStyle="bold">
                                    </CheckBox>


                                </LinearLayout>

                            </androidx.cardview.widget.CardView>


                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginLeft="16dp"
                            android:orientation="vertical">

                            <androidx.cardview.widget.CardView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                                <LinearLayout
                                    android:layout_marginRight="8dp"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical">

                                    <CheckBox
                                        android:id="@+id/chk_setor_tunai"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:background="@drawable/outline_button"
                                        android:padding="12dp"
                                        android:text="Setor Tunai"
                                        android:textColor="#0D396D"
                                        android:textSize="16sp"
                                        android:textStyle="bold">
                                    </CheckBox>

                                    <com.google.android.material.textfield.TextInputLayout
                                        android:id="@+id/txt_input_setor_tunai"
                                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_centerHorizontal="true"
                                        android:layout_marginTop="8dp"
                                        android:visibility="gone"
                                        app:boxCornerRadiusBottomEnd="4dp"
                                        app:boxCornerRadiusBottomStart="4dp"
                                        app:boxCornerRadiusTopEnd="4dp"
                                        app:boxCornerRadiusTopStart="4dp"
                                        app:boxStrokeColor="#0F4C81"
                                        app:errorEnabled="true">

                                        <EditText
                                            android:id="@+id/edt_setor_tunai"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:digits="0123456789"
                                            android:gravity="top"
                                            android:hint="Jumlah uang disetor"
                                            android:inputType="numberDecimal"
                                            android:paddingLeft="10dp" />

                                        <TextView
                                            android:id="@+id/tv_setor_tunai"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:layout_marginTop="8dp"
                                            android:text=""
                                            android:visibility="gone">
                                        </TextView>

                                    </com.google.android.material.textfield.TextInputLayout>

                                </LinearLayout>

                            </androidx.cardview.widget.CardView>

                        </LinearLayout>



                    </LinearLayout>

                    <LinearLayout
                        android:layout_marginLeft="8dp"
                        android:layout_marginRight="8dp"
                        android:id="@+id/wrap_chck_tf"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="8dp"
                        android:visibility="visible">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <androidx.cardview.widget.CardView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical">

                                    <CheckBox
                                        android:id="@+id/chk_mesin_setor"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:background="@drawable/outline_button"
                                        android:padding="12dp"
                                        android:text="Setor Mesin"
                                        android:textColor="#0D396D"
                                        android:textSize="16sp"
                                        android:textStyle="bold">
                                    </CheckBox>

                                    <com.google.android.material.textfield.TextInputLayout
                                        app:hintAnimationEnabled="false"
                                        android:id="@+id/txt_input_jumlah_mesin"
                                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_centerHorizontal="true"
                                        android:layout_marginTop="8dp"
                                        android:visibility="gone"
                                        app:boxCornerRadiusBottomEnd="4dp"
                                        app:boxCornerRadiusBottomStart="4dp"
                                        app:boxCornerRadiusTopEnd="4dp"
                                        app:boxCornerRadiusTopStart="4dp"
                                        app:boxStrokeColor="#0F4C81"
                                        app:errorEnabled="true">

                                        <EditText
                                            android:id="@+id/edt_setor_mesin"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:digits="0123456789"
                                            android:gravity="top"
                                            android:hint="Jumlah uang disetor"
                                            android:inputType="numberDecimal"
                                            android:paddingLeft="10dp" />

                                        <TextView
                                            android:id="@+id/tv_setor_mesin"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:layout_marginTop="8dp"
                                            android:text=""
                                            android:visibility="gone">
                                        </TextView>

                                    </com.google.android.material.textfield.TextInputLayout>

                                </LinearLayout>

                            </androidx.cardview.widget.CardView>


                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginLeft="16dp"
                            android:orientation="vertical">

                            <androidx.cardview.widget.CardView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical">

                                    <CheckBox
                                        android:id="@+id/chk_setor_transfer"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:background="@drawable/outline_button"
                                        android:padding="12dp"
                                        android:text="Setor Transfer"
                                        android:textColor="#0D396D"
                                        android:textSize="16sp"
                                        android:textStyle="bold">
                                    </CheckBox>

                                    <com.google.android.material.textfield.TextInputLayout
                                        android:id="@+id/txt_input_setor_transfer"
                                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_centerHorizontal="true"
                                        android:layout_marginTop="8dp"
                                        android:visibility="gone"
                                        app:boxCornerRadiusBottomEnd="4dp"
                                        app:boxCornerRadiusBottomStart="4dp"
                                        app:boxCornerRadiusTopEnd="4dp"
                                        app:boxCornerRadiusTopStart="4dp"
                                        app:boxStrokeColor="#0F4C81"
                                        app:errorEnabled="true">

                                        <EditText
                                            android:id="@+id/edt_setor_transfer"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:digits="0123456789"
                                            android:gravity="top"
                                            android:hint="Jumlah uang disetor"
                                            android:inputType="numberDecimal"
                                            android:paddingLeft="10dp" />

                                        <TextView
                                            android:id="@+id/tv_setor_transfer"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:layout_marginTop="8dp"
                                            android:text=""
                                            android:visibility="gone">
                                        </TextView>

                                    </com.google.android.material.textfield.TextInputLayout>

                                </LinearLayout>

                            </androidx.cardview.widget.CardView>

                        </LinearLayout>



                    </LinearLayout>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:layout_marginBottom="8dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="4dp"
                app:cardElevation="0dp"
                app:strokeColor="#E4E4E4"
                app:strokeWidth="0.7dp">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <Button
                        android:layout_margin="10dp"
                        android:id="@+id/btn_confirm_setor"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:backgroundTint="#FF9800"
                        android:background="@drawable/blue_button_background"
                        android:text="Konfirmasi Total Setoran"
                        android:textColor="#ffff"
                        android:visibility="visible" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="3dp"
                        android:background="#fff3e5"
                        android:gravity="end"
                        android:orientation="horizontal"
                        android:padding="12dp">

                        <TextView

                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="10dp"
                            android:text="Total"
                            android:textColor="#171717"
                            android:textSize="14sp"
                            android:textStyle="bold">
                        </TextView>

                        <TextView
                            android:id="@+id/tv_total_setor_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:textColor="#171717">
                        </TextView>

                        <TextView
                            android:id="@+id/tv_total_setor"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="10dp"
                            android:text="0"
                            android:textColor="#F39C12"
                            android:textSize="16sp"
                            android:textStyle="bold">
                        </TextView>

                        <TextView
                            android:visibility="gone"
                            android:id="@+id/tv_total_stor_non_format_rupiah"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="10dp"
                            android:text="0"
                            android:textColor="#000000"
                            android:textSize="16sp"
                            android:textStyle="bold">
                        </TextView>

                    </LinearLayout>


                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>


            <Button
                android:backgroundTint="@color/color_background_grey"
                android:id="@+id/btn_setor"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_margin="16dp"
                android:background="@drawable/blue_button_background"
                android:gravity="center"
                android:padding="10dp"
                android:text="Setor Sekarang"
                android:textColor="#fff"
                android:textStyle="bold"
                android:visibility="visible" />

        </LinearLayout>


    </LinearLayout>
</ScrollView>